{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.py",
      "**/*.md",
      "**/*.bat",
      "**/*.ps1",
      "**/*.sh",
      "hosting/**",
      "test_*.py",
      "diagnose_*.py",
      "check_*.py",
      "goodbodybucks-firebase-adminsdk-*.json",
      "serviceAccountKey.json",
      "requirements.txt",
      "Dockerfile",
      ".firebase/**",
      ".git/**",
      "agent-tools/**",
      "__pycache__/**"
    ],
    "rewrites": [
      {
        "source": "/test-landing",
        "destination": "/test-landing.html"
      },
      {
        "source": "/app",
        "destination": "/app-main.html"
      },
      {
        "source": "/test-nav",
        "destination": "/test_navigation.html"
      },
      {
        "source": "/test-analytics",
        "destination": "/test_analytics.html"
      },
      {
        "source": "/api/**",
        "run": {
          "serviceId": "goodbodybucks-api",
          "region": "us-central1"
        }
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
