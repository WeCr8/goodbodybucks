{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.py",
      "**/*.md",
      "**/*.bat",
      "**/*.ps1",
      "**/*.sh",
      "hosting/**",
      "test_*.py",
      "diagnose_*.py",
      "check_*.py",
      "goodbodybucks-firebase-adminsdk-*.json",
      "serviceAccountKey.json",
      "requirements.txt",
      "Dockerfile",
      ".firebase/**",
      ".git/**",
      "agent-tools/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  }
}
